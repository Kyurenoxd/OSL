{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist-electron",
    "rootDir": "electron",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "electron",
    "paths": {
      "*": ["*"],
      "@types/*": ["types/*"]
    }
  },
  "include": [
    "electron/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*",
    "dist/**/*",
    "dist-electron/**/*"
  ]
} 